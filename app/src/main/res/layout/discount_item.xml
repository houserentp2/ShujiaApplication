<?xml version="1.0" encoding="utf-8"?>
<example.com.shujiaapplication.ui.LeftSlideView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/delete_discount"
            android:layout_height="90dp"
            android:layout_width="80dp"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_toRightOf="@+id/layout_content"
            android:text="删 除"
            android:textSize="25dp"
            android:background="#80E91E1E"
            android:textColor="#DDFFFFFF"
            />

        <android.support.v7.widget.CardView
            android:id = "@+id/layout_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            app:cardCornerRadius="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight="3">
                    <ImageView
                        android:id = "@+id/discountImage"
                        android:layout_margin="10dp"
                        android:layout_width="50dp"
                        android:layout_height="70dp"
                        android:background="@drawable/discount"/>

                </LinearLayout>



                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="7">

                    <TextView
                        android:layout_marginTop="7dp"
                        android:textSize="20sp"
                        android:id = "@+id/discountMoney"
                        android:textColor="@color/red"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id = "@+id/discountStore"
                        android:layout_marginTop="5dp"
                        android:textSize="20sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="店铺优惠券"/>

                    <TextView
                        android:id = "@+id/discountDate"
                        android:layout_marginTop="5dp"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2019.06.01-2019.09.01"/>
                </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>

    </RelativeLayout>

</example.com.shujiaapplication.ui.LeftSlideView>
