<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:circleimageview="http://schemas.android.com/tools">

    <Button
        android:id = "@+id/return_myfragment"
        android:layout_margin="10dp"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/back_button"/>

    <ImageView
        android:id = "@+id/mybackground"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:background="@drawable/mybackground"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id = "@+id/user_head"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        circleimageview:civ_border_color="#ffffff"
        circleimageview:civ_border_width="4dp"
        android:src="@drawable/user" />


    <android.support.v7.widget.CardView
        android:layout_below="@+id/mybackground"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textStyle="bold"
                    android:layout_marginLeft="20dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:textSize="16sp"
                    android:text="真实姓名:"/>

                <EditText
                    android:id = "@+id/PIeditName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:background="@null"/>
            </LinearLayout>

            <View
                android:layout_marginTop="7dp"
                android:layout_height="1px"
                android:layout_width="match_parent"
                android:layout_marginLeft="95dp"
                android:layout_marginRight="10dp"
                android:background="#80000000"
                />

            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textStyle="bold"
                    android:layout_marginLeft="20dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:textSize="16sp"
                    android:text="身份证号:"/>

                <EditText
                    android:id = "@+id/PIIDNum"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:background="@null"/>
            </LinearLayout>

            <View
                android:layout_marginTop="7dp"
                android:layout_height="1px"
                android:layout_width="match_parent"
                android:layout_marginLeft="95dp"
                android:layout_marginRight="10dp"
                android:background="#80000000"
                />

            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textStyle="bold"
                    android:layout_marginLeft="20dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:textSize="16sp"
                    android:text="选择省市:"/>

                <EditText
                    android:id = "@+id/PICity"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:layout_weight="7"
                    android:background="@null"/>
            </LinearLayout>
            <View
                android:layout_marginTop="7dp"
                android:layout_height="1px"
                android:layout_width="match_parent"
                android:layout_marginLeft="95dp"
                android:layout_marginRight="10dp"
                android:background="#80000000"
                />

            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textStyle="bold"
                    android:layout_marginLeft="20dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:textSize="16sp"
                    android:text="详细地址:"/>

                <EditText
                    android:id = "@+id/PIHome"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:layout_weight="7"
                    android:background="@null"/>
            </LinearLayout>
            <View
                android:layout_marginTop="7dp"
                android:layout_height="1px"
                android:layout_width="match_parent"
                android:layout_marginLeft="95dp"
                android:layout_marginRight="10dp"
                android:background="#80000000"
                />

            <Button
                android:id = "@+id/PIsave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="#00BCD4"
                android:background="@drawable/shape"
                android:text="保存"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>