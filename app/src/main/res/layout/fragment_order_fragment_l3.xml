<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout
    tools:context=".ui.MainFragment.OrderFragmentL1"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_height="40dp"
        android:layout_width="200dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp">

        <Button
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:textColor="#ffffffff"
            android:text="短租"
            android:layout_weight="1"
            android:background="@drawable/left_roundno"
            android:id="@+id/button_leftno"/>

        <Button
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:textColor="#ffffffff"
            android:text="长租"
            android:layout_weight="1"
            android:background="@drawable/right_round"
            android:id="@+id/button_right"/>
    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_height="40dp"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp">

        <Button
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:textColor="#ffff0000"
            android:text="已申请"
            android:layout_weight="1"
            android:background="#ffdbdbdb"
            android:id="@+id/button_apply"
            android:textStyle="bold"/>

        <Button
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:text="已签约"
            android:layout_weight="1"
            android:background="#ffdbdbdb"
            android:id="@+id/button_sign"
            android:textStyle="bold"/>

        <Button
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:text="已结束"
            android:layout_weight="1"
            android:background="#ffdbdbdb"
            android:id="@+id/button_finish"
            android:textStyle="bold"/>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/view_finish"/>

</LinearLayout>